<Window x:Class="LearnXaml.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearnXaml"
        mc:Ignorable="d"
        Title="NewGame" Height="450" Width="800"
        >

    <Canvas x:Name="MyCanvas" Focusable="true" KeyDown="KeyIsDown" KeyUp="KeyIsUp">


        <Rectangle Name="Bacground" Height="450" Width="1262" Fill="Orange"  Canvas.Left="0"/>
        <Rectangle Name="Bacground2" Height="450" Width="1262" Fill="Green"  Canvas.Left="1262"/>

        <Rectangle Name="ground" Height="100" Width="800" Canvas.Top="350" Canvas.Left="0"/>

        <Rectangle Name="player" Height="100" Width="67" Fill="Brown"  Canvas.Top="140" Canvas.Left="100"/>

        <Rectangle Name="obstacle" Height="200" Width="70" Fill="Red"  Canvas.Top="300" Canvas.Left="700"/>

        <Label Name="score" FontSize="32" FontWeight="Bold" Content="Score: 0"/>

    </Canvas>
</Window>
